<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cart">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/trende" />

    <View
        android:id="@+id/divider3"
        android:layout_width="395dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="44dp"
        android:layout_height="50dp"
        android:tint="#050505"
        android:visibility="visible"
        android:layout_marginTop="60dp"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="78dp"
        android:layout_height="28dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/cart"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="8dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:srcCompat="@drawable/ic_shopping_cart_black_24dp"
        android:layout_marginLeft="360dp"
        tools:ignore="VectorDrawableCompat" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="140dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.057"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider4"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/p2" />

            <TextView
                android:id="@+id/img2"
                android:layout_width="203dp"
                android:layout_height="49dp"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="-160dp"
                android:layout_marginBottom="8dp"
                android:text="@string/des1"
                android:textColor="@android:color/black"
                android:layout_marginLeft="180dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/price1"
                android:textColor="@android:color/black"
                app:layout_constraintVertical_bias="0.237"
                android:layout_marginLeft="180dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/qty"
                app:layout_constraintVertical_bias="0.004"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="8dp" />

            <SeekBar
                android:id="@+id/seekBar2"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="175dp"
                android:layout_height="13dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="167dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:max="10"
                android:progress="1"
                app:layout_constraintVertical_bias="0.411"
                android:layout_marginLeft="167dp"
                android:layout_marginRight="8dp" />



            <View
                android:id="@+id/divider4"
                android:layout_width="395dp"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/divider3" />



            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.057"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider4"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/p1" />

            <TextView
                android:id="@+id/img3"
                android:layout_width="203dp"
                android:layout_height="49dp"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="-160dp"
                android:layout_marginBottom="8dp"
                android:text="@string/des2"
                android:textColor="@android:color/black"
                android:layout_marginLeft="180dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/price"
                android:textColor="@android:color/black"
                app:layout_constraintVertical_bias="0.237"
                android:layout_marginLeft="180dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/qty1"
                app:layout_constraintVertical_bias="0.004"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="8dp" />

            <SeekBar
                android:id="@+id/seekBar3"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="175dp"
                android:layout_height="13dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="167dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:max="10"
                android:progress="1"
                app:layout_constraintVertical_bias="0.411"
                android:layout_marginLeft="167dp"
                android:layout_marginRight="8dp" />



            <View
                android:id="@+id/divider5"
                android:layout_width="395dp"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/divider3" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="40dp"
                android:textSize="25dp"
                android:text="@string/total"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginStart="290dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="-48dp"
                android:textSize="25dp"
                android:text="@string/totprice"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/chakout"
        android:layout_width="150dp"
        android:layout_height="31dp"
        android:layout_marginTop="650dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/rounded_button"
        android:text="@string/checkout"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


</RelativeLayout>